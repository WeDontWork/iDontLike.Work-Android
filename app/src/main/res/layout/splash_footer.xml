<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/splash_screen_text_color_transparent75"
        android:textSize="12sp"
        android:padding="5dp"
        android:textAlignment="center"
        android:text="Shhh!! Share only with your close friends"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:visibility="gone"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/splash_screen_footer_icon_size"
            android:layout_height="@dimen/splash_screen_footer_icon_size"
            android:src="@drawable/whatsapp_outline"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:tint="@color/splash_screen_text_color_transparent50"
            />

        <ImageView
            android:layout_width="@dimen/splash_screen_footer_icon_size"
            android:layout_height="@dimen/splash_screen_footer_icon_size"
            android:src="@drawable/whatsapp_outline"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:tint="@color/splash_screen_text_color_transparent50"
            />


        <ImageView
            android:layout_width="@dimen/splash_screen_footer_icon_size"
            android:layout_height="@dimen/splash_screen_footer_icon_size"
            android:src="@drawable/whatsapp_outline"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:tint="@color/splash_screen_text_color_transparent50"
            />


        <ImageView
            android:layout_width="@dimen/splash_screen_footer_icon_size"
            android:layout_height="@dimen/splash_screen_footer_icon_size"
            android:src="@drawable/whatsapp_outline"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:tint="@color/splash_screen_text_color_transparent50"
            />


    </LinearLayout>

</LinearLayout>